#!/usr/bin/env bash

# GIT FUNCTIONS
git_branch() {
    git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# TERMINAL PROMPT
PS1=""
PS1+="â”Œ ğŸ’ \[\e[0;93m\]\u\[\e[m\]" # username
PS1+=" @ ğŸ’» \h " # space
PS1+="in ğŸ“ \[\e[0;95m\]\w\[\e[m\]" # current directory
PS1+="\[\e[0;92m\]\$(git_branch)\[\e[m\]" # current branch
PS1+="\n" # space
PS1+="â””â¯ " # end prompt
export PS1;
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
